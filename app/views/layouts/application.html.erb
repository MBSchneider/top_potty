<!DOCTYPE html>
<html>
<head>
  <title>TopPotty</title>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyBiSAQ-M7T65r6PCdSUVFwlqAt4xq99o44&sensor=false" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
<%= form_tag(restrooms_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<div class="input-append">
<%= text_field_tag :search, params[:search], class: "span2", placeholder: "123 Oak St, Anytown, WA" %>
<%= label_tag(:malefemale_male, "Male:", :value => "male") %>
<%= radio_button_tag(:malefemale, "male") %>
<%= label_tag(:malefemale_female, "Female:", :value => "female") %>
<%= radio_button_tag(:malefemale, "female") %>
<%= submit_tag "Search for restroom", :name => nil %>
</div>
<% end %>


  <%= render 'layouts/navbar' %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>

</body>
</html>
