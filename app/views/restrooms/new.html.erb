<h1>Add new restroom</h1>

<div id="prelim_search" style="<%='display:none' if @restroom.errors.count > 0 %>">
  <%= form_for new_restroom_path, :method => "get", class: "navbar-form", id: "newrestroom-location", remote: true do |f|%>
    <div class="input-append">
      <%= f.label "Address" %><br />
      <%= text_field_tag :address, params[:address], class: "span2", placeholder: "123 Oak St, Anytown, WA" %><br />
      <%= submit_tag "Next", :name => nil, class: "btn-success btn", id: "new_rr_search" %>
      <div id="after_search" style="display: none;">
        If any of the below match your restroom, please rate!  <br />
        Otherwise:
      </div>
      <button class="btn btn-small btn-success anim-item" style="display: none; margin-bottom: 5px; margin-top: 0px" id="add_new">
        Add new
      </button>
    </div>

  <% end %>
</div>
<%= render 'form' %>
