<tr class="restroom" data-lat=<%= restroom.latitude %> data-long=<%= restroom.longitude %> id=<%= dom_id(restroom) %> >
  <td><%= link_to restroom.location, restroom %></td>
  <td><%= restroom.malefemale %></td>
  <td>
  <%= restroom.cleanliness_ratings.average('cleanlinessrating').round(2) %>
  (<%= restroom.cleanliness_ratings.count %> reviews total)</td>
  <% if policy(restroom).update? %>
    <td><%= link_to 'Edit', edit_restroom_path(restroom) %></td>
  <% end %>
  <% if policy(restroom).destroy? %>
    <td><%= link_to 'Destroy', restroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
    <td><%= image_tag "http://maps.google.com/maps/api/staticmap?size=200x200&sensor=false&zoom=15&markers=#{restroom.latitude}%2C#{restroom.longitude}" %></td>
</tr>
