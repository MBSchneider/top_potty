<%= form_tag(restrooms_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<div class="input-append">
<%= text_field_tag :search, params[:search], class: "span2", placeholder: "123 Oak St, Anytown, WA" %><br />
<%= label_tag(:malefemale_male, "Male:", :value => "male") %>
<%= radio_button_tag(:malefemale, "male") %>
<%= label_tag(:malefemale_female, "Female:", :value => "female") %>
<%= radio_button_tag(:malefemale, "female") %><br />
<%= submit_tag "Search for existing restroom", :name => nil %>
</div>
<% end %>
