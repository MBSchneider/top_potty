<%= form_for(@restroom) do |f| %>
  <% if @restroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restroom.errors.count, "error") %> prohibited this restroom from being saved:</h2>

      <ul>
      <% @restroom.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table border="0">
    <tr>
      <th>INFO</th>
      <th>RATE</th>
      <th>MORE INFO</th>
    </tr>
    <td>
      <div class="field">
        <%= f.label :location, "Address" %><br />
        <%= f.text_field :location %>
      </div>
      <div class="field">
        <%= f.label(:foundwithin, "Found within...") %><br />
        <%= f.text_field :foundwithin, placeholder: "\"Safeway\" or \"Sears Tower, 4th floor\"" %>
      </div>
      <div class="field">
        <%= f.label(:directions, "Directions to restroom") %><br />
        <%= f.text_area :directions, placeholder: "Turn left at reception, head down hallway...", :size => "30x4" %>
      </div>
      <div class="field">
            <%= f.radio_button(:malefemale, "male") %>
            <%= f.label(:malefemale, "Male", :value => "male") %>
            <%= f.radio_button(:malefemale, "female") %>
            <%= f.label(:malefemale, "Female", :value => "female") %>
      </div>
    </td>

    <td>
      <%= f.fields_for :cleanliness_ratings do |builder| %>
        <div class="field">
          <%= builder.label(:cleanlinessrating, "Cleanliness rating, 1 (dirtiest) to 10 (cleanest):") %><br />
          <%= builder.select(:cleanlinessrating, 1..10, :selected => 5) %>
        </div>
      <% end %>

      <%= f.fields_for :notes do |builder| %>
        <div class="field">
          <%= builder.hidden_field :user_id, :value => current_user.id %>
          <%= builder.label(:comment, "Notes:") %><br />
          <%= builder.text_area :comment, placeholder: "Add any notes/comments about this restroom here", :size => "30x10" %>
        </div>
      <% end %>
    </td>

    <td>
        <div class="field">
          <center><%= f.label(:numberofstalls, "# of stalls") %>
          <%= f.select(:numberofstalls, 0..20, :selected => 1) %></br>
          -----</center>
        </div>

        <div class="field">
          <center><%= f.label(:numberofurinals, "# of urinals") %>
          <%= f.select(:numberofurinals, 0..20, :selected => 0) %></br>
          -----</center>
        </div>
      <center><%= f.label(:handsfreefaucets, "Hands-free faucets") %>
      <%= f.check_box :handsfreefaucets %></br>
      -----</center>
      <center><%= f.label(:handsfreetoilets, "Hands-free toilets") %>
      <%= f.check_box :handsfreetoilets %></br>
      -----</center>
      <center><%= f.label(:handsfreeurinals, "Hands-free urinals") %>
      <%= f.check_box :handsfreeurinals %></br>
      -----</center>
      <center><%= f.label(:urinalprivacy, "Urinal privacy screens") %>
      <%= f.check_box :urinalprivacy %></br>
      -----</center>
      <center><%= f.label(:wheelchair, "Wheelchair access") %>
      <%= f.check_box :wheelchair %></br>
      -----</center>
      <center><%= f.label(:attendant, "Attendant") %>
      <%= f.check_box :attendant %></br>
      -----</center>
      <center><%= f.label(:diaper, "Diaper station") %>
      <%= f.check_box :diaper %></br>
      -----</center>
      <center><%= f.label(:fhdispenser, "Feminine hygiene dispenser") %>
      <%= f.check_box :fhdispenser %></br>
      -----</center>
      <center><%= f.label(:outlets, "Electrical outlets") %>
      <%= f.check_box :outlets %></br>
      -----</center>
      <center><%= f.label(:makeupmirror, "Make-up mirror") %>
      <%= f.check_box :makeupmirror %></br>
      -----</center>
      <center><%= f.label(:heatedseats, "Heated toilet seats") %>
      <%= f.check_box :heatedseats %></br>
      -----</center>
    </td>
  </table>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>
