var showAddNew = true;

if (showAddNew == true){
  console.log("show add new " + showAddNew);
  <% if params[:newrr_search].present? %>

    console.log("yes search...");
    <% @search_coordinates = Geocoder.coordinates(params[:newrr_search]) %>
    <% if params[:male_or_female].present? %>
      <% @restrooms = Restroom.near(params[:newrr_search], 60, :order => :distance).where(:malefemale => params[:male_or_female]).limit(5) %>
    <% else %>
      <% @restrooms = Restroom.near(params[:newrr_search], 60, :order => :distance).limit(5) %>
    <% end %>

    $('.container').append("<%= j render 'search_results' %>");

    window.drawTheMap();

    $("#new_rr_search").hide();
    $("#after_search").show();
    $("#add_new").show();
    showAddNew = false;
  <% else %>
    console.log("no search...");
  <% end %>
};

$("#add_new").on("click", function(){
  console.log("clicked!!");
  $("#add_new").remove();
  $("#after_search").remove();
  $("#prelim_search").before("<%= j render 'form' %>");
  $("#restroom_location").val($("#newrr_search").val());

  if ($('#male_or_female_male').is(':checked')) {
    $('#restroom_malefemale_male').prop('checked',true);
  } else {
    $('#restroom_malefemale_female').prop('checked',true);
  }
  $("#prelim_search").remove();
})
